<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/match">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        style="@style/match">

        <LinearLayout
            android:id="@+id/parallax_bar"
            style="@style/fill"
            android:layout_alignParentTop="true"
            android:background="?attr/colorPrimary"
            android:elevation="@dimen/appbar_elevation"
            android:orientation="vertical">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            style="@style/fill"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:elevation="@dimen/appbar_elevation">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/fill"
                android:elevation="0dp"
                app:layout_scrollFlags="scroll|enterAlways"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
                <ImageView
                    android:layout_marginTop="?attr/actionBarSize"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/listPreferredItemHeight"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/app_name"
                    android:scaleType="center"
                    android:src="@drawable/ic_logo"/>
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recview_forecast"
            style="@style/match"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <!-- empty list -->
        <TextView
            android:id="@+id/recview_forecast_empty"
            style="@style/match"
            app:layout_anchor="@+id/recview_forecast"
            app:layout_anchorGravity="fill"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/spacing_normal_16"
            android:paddingEnd="@dimen/spacing_normal_16"
            android:paddingLeft="@dimen/spacing_normal_16"
            android:paddingRight="@dimen/spacing_normal_16"
            android:paddingStart="@dimen/spacing_normal_16"
            android:paddingTop="@dimen/spacing_normal_16"
            android:text="@string/empty_forecast_list" />

    </android.support.design.widget.CoordinatorLayout>

</FrameLayout>