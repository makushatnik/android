<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/fill"
              android:gravity="center_vertical"
              android:minHeight="?android:attr/listPreferredItemHeight"
              android:orientation="horizontal"
              android:background="@drawable/today_touch_selector">

    <LinearLayout
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:layout_marginTop="@dimen/spacing_normal_16"
        android:layout_marginBottom="@dimen/spacing_normal_16"
        android:layout_marginLeft="@dimen/spacing_large_60"
        android:orientation="vertical">
        <TextView
            android:id="@+id/list_item_date_txt"
            style="@style/wrap"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceLarge"/>
        <TextView
            android:id="@+id/list_item_high_txt"
            style="@style/wrap"
            android:textSize="@dimen/font_large_72"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-light"/>
        <TextView
            android:id="@+id/list_item_low_txt"
            style="@style/wrap"
            android:layout_marginLeft="@dimen/spacing_small_8"
            android:textSize="@dimen/font_medium_36"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:layout_marginRight="@dimen/spacing_normal_16"
        android:gravity="center_horizontal|bottom"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/list_item_icon"
            style="@style/wrap"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_launcher"/>
        <TextView
            android:id="@+id/list_item_forecast_txt"
            style="@style/wrap"
            android:layout_gravity="center_horizontal"
            android:text="@string/clear"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceLarge"/>
    </LinearLayout>
</LinearLayout>