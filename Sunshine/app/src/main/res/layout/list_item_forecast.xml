<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fill"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:background="@drawable/touch_selector">

    <FrameLayout
        android:layout_width="@dimen/size_medium_60"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/list_item_icon"
            style="@style/wrap"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:orientation="vertical">
        <TextView
            android:id="@+id/list_item_date_txt"
            style="@style/wrap"
            android:text="@string/tomorrow"
            android:fontFamily="sans-serif-condensed"
            android:textSize="@dimen/font_small_20"/>
        <TextView
            android:id="@+id/list_item_forecast_txt"
            style="@style/wrap"
            android:text="@string/clear"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceSmall"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/list_item_high_txt"
            style="@style/wrap"
            android:layout_gravity="center"
            android:text="@string/high"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceLarge"/>
        <TextView
            android:id="@+id/list_item_low_txt"
            style="@style/wrap"
            android:layout_gravity="center"
            android:text="@string/low"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceSmall"/>
    </LinearLayout>

</LinearLayout>
